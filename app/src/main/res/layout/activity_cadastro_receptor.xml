<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.alessandro.appdoacaodeorgaos.CadastroReceptorActivity"
    android:orientation="vertical">

    <TextView
        android:text="Nome : "
        />
    <EditText
        android:layout_width="fill_parent"
        android:id="@+id/EditTextNomeReceptor"
        android:inputType="text"
        />
    <TextView
        android:text="Idade : "
        />
    <EditText
        android:layout_width="fill_parent"
        android:id="@+id/EditTextIdadeReceptor"
        android:inputType="number"
        />
    <TextView
        android:text="Tipo sanguineo"
        />
    <EditText
        android:layout_width="fill_parent"
        android:inputType="text"
        android:id="@+id/EditTextTipoSangueReceptor"
        />
    <TextView
        android:gravity="center"
        android:text="          Itens que pode doar"
        />
    <CheckBox
        android:id="@+id/CBXReceptorCoracao"
        android:text=" Coraçao"
        />
    <CheckBox
        android:id="@+id/CBXReceptorOssos"
        android:text=" Ossos"
        />
    <CheckBox
        android:id="@+id/CBXReceptorMedula"
        android:text=" Medula"
        />
    <CheckBox
        android:id="@+id/CBXReceptorCorneas"
        android:text=" Córneas"
        />
    <CheckBox
        android:id="@+id/CBXReceptorSangue"
        android:text=" Sangue"
        />

    <Button
        android:id="@+id/btnSaveCadastroReceptor"
        android:text="Salvar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        />

</GridLayout>
